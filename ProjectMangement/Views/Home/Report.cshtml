@model TimeOffManager.Models.Request

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <input type="text" class="form-control custom-input" placeholder="@Model.StartDate">
        </div>
        <div class="col-md-6">
            <input type="text" class="form-control custom-input" placeholder="@Model.EndDate">
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <textarea class="form-control custom-textarea" rows="5" placeholder="@Model.Reason"></textarea>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12 text-right">
            <button type="button" class="btn btn-primary" style="background-color: #008c96; border-color: #008c96;">Submit Changes</button>
        </div>
    </div>
</div>